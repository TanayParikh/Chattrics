{
  "name": "Chattrics",
  "productName": "Chattrics",
  "version": "0.5.0",
  "description": "Aggregated, open source chat client.",
  "repository": "https://github.com/TanayParikh/Chattrics",
  "homepage": "https://chattrics.com",
  "license": "",
  "author": {
    "name": "Tanay Parikh and Chris Hilts",
    "email": "chat@chattrics.com",
    "url": "https://tanayparikh.com"
  },
  "keywords": [
    "chat"
  ],
  "engines": {
    "node": ">=4",
    "npm": ">=3"
  },
  "main": "./src/main.js",
  "dependencies": {
    "bulma": "^0.6.2",
    "chart.js": "^2.4.0",
    "electron-is-dev": "^0.3.0",
    "electron-reload": "^1.1.0",
    "electron-simple-updater": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^2.20.1",
    "font-awesome": "^4.7.0",
    "keytar": "4.1.0",
    "vue": "^2.1.10"
  },
  "devDependencies": {
    "electron": "^1.*.*",
    "electron-builder": "^19.56.0",
    "electron-builder-squirrel-windows": "latest",
    "electron-rebuild": "^1.5.7",
    "electron-winstaller": "^2.5.1"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build",
    "rebuild": "npm rebuild --runtime=electron --target=1.7.10 --disturl=https://atom.io/download/atom-shell --arch=x64 --abi=48",
    "electron-rebuild": "./node_modules/.bin/electron-rebuild"
  },
  "build": {
    "appId": "com.chattrics",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build\\icon.ico"
    }
  }
}

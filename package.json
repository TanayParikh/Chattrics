{
  "name": "Chattrics",
  "productName": "Chattrics",
  "version": "0.0.1",
  "description": "Aggregated, open source chat client.",
  "repository": "TanayParikh/Chattrics",
  "homepage": "https://github.com/TanayParikh/Chattrics",
  "license": "",
  "author": {
    "name": "Tanay Parikh & Chris Hilts",
    "email": "chat@chattrics.com",
    "url": "https://chattrics.com"
  },
  "keywords": [
    "chat"
  ],
  "engines": {
    "node": ">=4",
    "npm": ">=3"
  },
  "main": "./src/main.js",
  "dependencies": {
    "bulma": "^0.3.1",
    "chart.js": "^2.4.0",
    "electron-reload": "^1.1.0",
    "electron-simple-updater": "^1.2.0",
    "font-awesome": "^4.7.0",
    "keytar": "^3.0.2",
    "vue": "^2.1.10"
  },
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-rebuild": "^1.5.7",
    "electron-winstaller": "^2.5.1"
  },
  "scripts": {
    "electron-rebuild": "./node_modules/.bin/electron-rebuild",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=app/icons/mac/icon.icns --prune=true --out=Release",
    "package-win-32": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=app/icons/win/icon.ico --prune=true --out=Release --version-string.ProductName=\"Chattrics\"",
    "package-win-64": "electron-packager . --overwrite --asar=true --platform=win32 --arch=x64 --icon=app/icons/win/icon.ico --prune=true --out=Release --version-string.ProductName=\"Chattrics\"",
    "package-linux-32": "electron-packager . --overwrite --platform=linux --arch=ia32 --icon=app/icons/png/512x512.png --prune=true --out=Release",
    "package-linux-64": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=app/icons/png/512x512.png --prune=true --out=Release",
    "create-installer-win": "node Installers/Windows/createinstaller.js"
  },
  "build": {
    "appId": "chattrics",
    "app-category-type": "public.app-category.social",
    "win": {
      "iconUrl": "https://raw.githubusercontent.com/TanayParikh/Chattrics/master/app/icons/win/app_icon.ico"
    }
  }
}
